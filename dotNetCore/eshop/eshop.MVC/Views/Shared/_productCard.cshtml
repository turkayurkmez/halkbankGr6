@model Product

<div class="card">
    <img src="@Model.ImageUrl" class="img-fluid" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">@Model.Price yerine, @(Model.Price * (1 - Model.DiscountRate)) TL</p>

        <button class="btn btn-primary">Sepete Ekle</button>
    </div>
</div>